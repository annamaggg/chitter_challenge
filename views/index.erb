<html>
    <head></head>
    <body>
        <h1>Chitter</h1>
        <%if @loggedin%>
            <p>logged in</p>
            <a href="/posts/new">Create a post</a>
            <%=@user.username%>    
        <%else%>
            <p>not logged in</p>
            <a href="/login">Login</a>
            <a href="/signup">Sign up</a>
        <%end%>
        <%@post_feed.each do |post|%>
        <div>
            <h2><%=post.title%></h2>
            <h3><%=post.time_stamp%></h3>
            <p><%=post.content%></p>
        </div>
        <%end%>
    </body>
</html>