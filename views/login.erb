<html>
    <head>
      <style>
        .space {
          margin: 20px 0px;
        }
        .back {
          border-radius: 20px;
          color: white;
          background: lightsalmon;
          text-decoration: none;
          padding: 14px 16px;
          margin: 10px 10px;
          transform: translateY(20px);
        }
        .container {
          margin: auto;
          background: salmon;
          width: 20%;
          padding: 30px 0px;
          border-radius: 20px;
        }
        .login {
          margin: auto;
          padding: 20px 2px;
          width: 80%;
          text-align: center;  
        }
        .form {
          display: column;
          justify-items: center;
          margin: auto;
          text-align: center;
        }
      </style>
    </head>
    <body>
      <div class="space">
        <a class="back" href="/">Back</a>
      </div>
      <div class="container">
        <h1 class="login">Log in</h1>
          <form class="form" action="/login" method="POST">
            <label class="element" for="username">Username</label><br>
            <input type="text" id="username" name="username"><br><br>

            <label class="element" for="passkey">Password</label><br>
            <input type="text" id="passkey" name="passkey"><br><br>

            <input class="element" type="submit" name="Submit"><br>
          </form>
          <%if @error%>
            <p><%=@error%></p>
          <%end%>
        </div>
    </body>
</html>